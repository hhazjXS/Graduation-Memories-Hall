.container {
  padding: 20px;
}

.upload-button {
  background-color: #1AAD19;
  color: white;
  padding: 10px;
  text-align: center;
  border-radius: 5px;
  margin-bottom: 20px;
}

.message-card {
  border: 1px solid #ddd;
  padding: 10px;
  margin-bottom: 20px;
  border-radius: 5px;
}

.user-name {
  color: #333;
  font-weight: bold;
  margin-bottom: 10px;
}

.uploaded-image {
  width: 100%;
  margin-bottom: 10px;
}

.message-text {
  color: #555;
}
